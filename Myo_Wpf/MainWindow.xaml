        <Viewport3D Name="mainViewPort" ClipToBounds="True" Grid.Column="0" Grid.RowSpan="5">
            <Viewport3D.Camera>
                <PerspectiveCamera
                    FarPlaneDistance="100"
                    LookDirection="-1,-2,-3"
                    UpDirection="0,1,0"
                    NearPlaneDistance="1"
                    Position="2,4,6"
                    FieldOfView="60" />
            </Viewport3D.Camera>
            <ModelVisual3D>
                <ModelVisual3D.Content>
                    <DirectionalLight
          Color="White"
          Direction="-2,-3,-1" />
                </ModelVisual3D.Content>
            </ModelVisual3D>
        </Viewport3D>
        <StackPanel x:Name="spUI_Elements" Grid.Column="1" Grid.Row="0" Grid.RowSpan="5">
            <TextBlock Text="Com Port Num:" TextAlignment="Center" FontWeight="Bold"/>
            <TextBox Text="{Binding ComPort}" />

            <Button Content="Start"
                    Command="{Binding Path=StreamAndConnectCommand}"/>

            <Button Content="Stop"
                    Command="{Binding Path=DisconnectCommand}"/>

            <TextBlock Text="{Binding OutputText}"/>

            <TextBlock Text="{Binding CubeRotation.Rotation}"/>

            <StackPanel Orientation="Horizontal">
                <Label Content="X: "/>
                <TextBlock Text="{Binding XRot}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Content="Y: "/>
                <TextBlock Text="{Binding YRot}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Content="Z: "/>
                <TextBlock Text="{Binding ZRot}"/>
            </StackPanel>

        </StackPanel>

    </Grid>

</Window>
